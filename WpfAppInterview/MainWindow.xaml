<Window x:Class="WpfAppInterview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppInterview"
        mc:Ignorable="d"
        Title="MainWindow" Height="506" Width="296" ResizeMode="NoResize">
    <Canvas Style="{StaticResource redStyle}">
        <TextBox x:Name="textArea" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="259" Height="389" Canvas.Left="10" Canvas.Top="54" BorderBrush="Black"/>
        <Button x:Name="confirmButton" Content="Confirm" Canvas.Left="10" Canvas.Top="448" Width="259" Click="confirmButton_Click" />
        <Label Content="Enter text&#xD;Then press 'Confirm' to count words" Canvas.Left="10" Canvas.Top="10" Width="259" Height="39"/>
    </Canvas>
</Window>
